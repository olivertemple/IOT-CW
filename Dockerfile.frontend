FROM node:20-alpine

WORKDIR /app

# Install dependencies
COPY package*.json ./
RUN npm ci

# Copy project
COPY . .

EXPOSE 3000

# Start Vite dev server bound to 0.0.0.0 so it's reachable from host
# Vite is configured to listen on port 3000 via `vite.config.ts`.
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0", "--port", "3000"]
